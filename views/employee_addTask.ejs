	<body>
		<section class="header">
			<div class="logo">
				<!-- <i class="ri-menu-line icon icon-0 menu"></i> -->
				<h2>Mr. <span>Manager</span></h2>
			</div>
		</section>
		<section class="main">
			<div class="sidebar">
				<ul class="sidebar--items">
					<li>
						<a href="/employee" >
							<span class="icon icon-1"
								><i
									class="ri-layout-grid-line"
								></i
							></span>
							<span class="sidebar--item"
								>Home</span
							>
						</a>
					</li>
					<li>
						<a href="/task/add" id="active--link">
							<span class="icon icon-2"
								><i class="ri-user-line"></i
							></span>
							<span class="sidebar--item"
								>My Tasks</span
							>
						</a>
					</li>
					<li>
						<a href="/employee/graph">
							<span class="icon icon-3"
								><i class="ri-user-2-line"></i
							></span>
							<span
								class="sidebar--item"
								style="white-space: nowrap"
								>My Graphs</span
							>
						</a>
					</li>
					<li>
						<a href="/employee/me">
							<span class="icon icon-4"
								><i class="ri-user-line"></i
							></span>
							<span class="sidebar--item"
								>My Profile</span
							>
						</a>
					</li>
                    <li>
						<a href="/employee/edit">
							<span class="icon icon-4"
								><i class="ri-user-line"></i
							></span>
							<span class="sidebar--item"
								>Edit Profile</span
							>
						</a>
					</li>
				</ul>
				<ul class="sidebar--bottom-items">
					<li>
						<a href="/logout">
							<span class="icon icon-8"
								><i
									class="ri-logout-box-r-line"
								></i
							></span>
							<span class="sidebar--item"
								>Logout</span
							>
						</a>
					</li>
				</ul>
			</div>
			<div class="main--content">
				<div class="overview">
					
					<div class="title">
						<h4 class="section--title">
							<b>Add a Task</b>
						</h4>
					</div>
					<br />
                    <form action="/task/add" method="post">
                        <div class="row g-3 align-items-center">
                            
                            <div class="col-3"></div>
                            <div class="col-1">
                                <label
                                    for="Description"
                                    class="col-form-label"
                                    >Description</label
                                >
                            </div>
                            <div class="col-5">
                                <input
                                    type="text"
                                    id="Description"
                                    class="form-control"
                                    name="description"
                                    required
                                />
                            </div>
                            <div class="col-3"></div>
                            <div class="col-3"></div>
                            <div class="col-1">
                                <label
                                    for="startTime"
                                    class="col-form-label"
                                    >Start Time</label
                                >
                            </div>
                            <div class="col-5">
                                <input
                                    type="datetime-local"
                                    id="startTime"
                                    class="form-control"
                                    name="startTime"
                                    max="<%=maxDate%>"
                                    required
                                />
                            </div>
                            <div class="col-3"></div>
                            <div class="col-3"></div>
                            <div class="col-1">
                                <label
                                    for="timetaken"
                                    class="col-form-label"
                                    >Time Taken</label
                                >
                            </div>
                            <div class="col-5">
                                <input
                                    type="number"
                                    id="timetaken"
                                    class="form-control"
                                    placeholder="In Minutes"
                                    name="minutes"
                                    required
                                />
                            </div>
                            <div class="col-3"></div>
                            <div class="col-3"></div>
                            <div class="col-1">
                                <label
                                    for="dropdown"
                                    class="col-form-label"
                                    >Type</label
                                >
                            </div>
                            <div class="col-5">
                                <select
                                    class="col-5 form-select form-select-m mb-3"
                                    id="dropdown" name="taskType" required
                                >
                                    <!-- <option selected>Select Here</option> -->
                                    <option value="Work">Work</option>
                                    <option value="Meeting">Meeting</option>
                                    <option value="Break">Break</option>
                                </select>
                            </div>
                            <div class="col-6"></div>
                            <div class="col-6"></div>
                            <div class="col-3"></div>

                            <button
                                class="btn my-4 col-6"
                                id="menu-btn"
                                type="submit"
                            >
                                Add Task
                            </button>
                        </div>
                    </form>
					<hr />
					<div class="title">
						<h2 class="section--title">
							<b>Previous Tasks</b>
						</h2>
					</div>

					<div class="table">
						<table>
							<thead>
								<tr>
									<th>Type</th>
									<th>Description</th>
									<th>Start Date</th>
									<th>Start Time</th>
									<th>Total Minutes</th>
									<th>Delete</th>
								</tr>
							</thead>
							<tbody>
                                <% if(employee != {}) {%>
                                    <% for(let i=0; i<employee.tasks.length; i++) {%>
                                        <tr>
                                            <td><%=employee.tasks[i].taskType%></td>
                                            <td><%=employee.tasks[i].description%></td>
                                            <td><%=employee.tasks[i].startTime.toDateString()%></td>
                                            <td><%=employee.tasks[i].startTime.toLocaleTimeString()%></td>
                                            <td><%=employee.tasks[i].minutes%></td>
                                            <td>
                                                <a href="/task/delete/<%=employee.tasks[i]._id%>" style="text-decoration: none;" class="add">
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% } %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</section>
