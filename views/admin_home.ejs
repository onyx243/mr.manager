<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			http-equiv="X-UA-Compatible"
			content="IE=edge"
		/>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="/adminHome.css"
		/>
		<title>Admin Home</title>
	</head>

	<body>
		<section class="header">
			<div class="logo">
				<!-- <i class="ri-menu-line icon icon-0 menu"></i> -->
				<h1 style="font-size: 2rem">E.A.T</h1>
			</div>
		</section>
		<section class="main">
			<div class="sidebar">
				<ul class="sidebar--items">
					<li>
						<a href="/admin" id="active--link">
							<span class="icon icon-1"
								><i
									class="ri-layout-grid-line"
								></i
							></span>
							<span class="sidebar--item"
								>Home</span
							>
						</a>
					</li>
					<li>
						<a href="/admin/active/employees">
							<span class="icon icon-2"
								><i class="ri-user-line"></i
							></span>
							<span class="sidebar--item"
								>Active Employees</span
							>
						</a>
					</li>
					<li>
						<a href="/admin/deactive/employees">
							<span class="icon icon-2"
								><i class="ri-user-line"></i
							></span>
							<span class="sidebar--item"
								>Deactive Employee</span
							>
						</a>
					</li>
					<li>
						<a href="/admin/add">
							<span class="icon icon-3"
								><i class="ri-user-2-line"></i
							></span>
							<span
								class="sidebar--item"
								style="white-space: nowrap"
								>Add New Employee</span
							>
						</a>
					</li>
				</ul>
				<ul class="sidebar--bottom-items">
					<li>
						<a href="/logout">
							<span class="icon icon-8"
								><i
									class="ri-logout-box-r-line"
								></i
							></span>
							<span class="sidebar--item"
								>Logout</span
							>
						</a>
					</li>
				</ul>
			</div>
			<div class="main--content">
				<div class="overview">
					<div class="title">
						<h2 class="section--title">
							Admin Dashboard
						</h2>
					</div>
					<br /><br />
					<div class="cards">
						<div class="card card-1">
							<div class="card--data">
								<div class="card--content">
									<h5 class="card--title">
										Current Employees
									</h5>
									<h1><%=activeEmployee%></h1>
								</div>
								<i
									class="ri-user-2-line card--icon--lg"
								></i>
							</div>
						</div>
						<div class="card card-2">
							<div class="card--data">
								<div class="card--content">
									<h5 class="card--title">
										Deactivated Account
									</h5>
									<h1><%=deactiveEmployee%></h1>
								</div>
								<i
									class="ri-user-line card--icon--lg"
								></i>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- <script src="/assets/js/main.js"></script> -->
	</body>
</html>
